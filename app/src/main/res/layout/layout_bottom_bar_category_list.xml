        <TextView
            android:id="@+id/new_task_family_checked"
            android:layout_width="@dimen/size_new_task_bottom_checked"
            android:layout_height="@dimen/size_new_task_bottom_checked"
            android:layout_marginRight="@dimen/margin_default"
            android:background="@drawable/ic_new_task_checked"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/new_task_personal_category"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/shape_rectangle_task_personal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

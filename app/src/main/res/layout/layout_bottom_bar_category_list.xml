        <TextView
            android:id="@+id/personal_task_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/personal_label"
            android:textColor="@color/white"
            android:textSize="@dimen/font_list_label_name"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/personal_task_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:text="1 task"
            android:textColor="@color/white"
            android:textSize="@dimen/font_list_label_task"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/personal_task_label" />

        <TextView
            android:id="@+id/new_task_personal_checked"
            android:layout_width="@dimen/size_new_task_bottom_checked"
